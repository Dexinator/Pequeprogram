---
interface Cliente {
  nombre: string;
  telefono: string;
  email?: string;
  identificacion?: string;
}

interface Producto {
  id: string;
  index: number;
  categoria: string;
  subcategoria?: string;
  marca: string;
  estado: string;
  modalidad: string;
  precioCompra: number;
  precioVenta: number;
  precioConsignacion?: number;
}

interface Props {
  id?: string;
  className?: string;
  cliente: Cliente;
  productos: Producto[];
  totalCompra: number;
  totalVenta: number;
  valuacionId?: string;
  fecha?: string;
  editable?: boolean;
}

const { 
  id = "valuacion-resumen", 
  className = "", 
  cliente, 
  productos,
  totalCompra, 
  totalVenta,
  valuacionId = "",
  fecha = new Date().toLocaleDateString('es-MX'),
  editable = false
} = Astro.props;
---

<div id={id} class={`resumen-valuacion ${className}`}>
  <div class="bg-background-alt p-6 rounded-lg shadow-sm border border-border">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
      <h2 class="text-2xl font-heading font-bold text-verde-oscuro">Resumen de Valuación</h2>
      
      {valuacionId && (
        <div class="flex items-center gap-2 mt-2 md:mt-0">
          <span class="bg-azul-claro text-white text-sm py-1 px-3 rounded-full">Fecha: {fecha}</span>
          <span class="bg-amarillo text-white text-sm py-1 px-3 rounded-full">ID: VP-{valuacionId}</span>
        </div>
      )}
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
      <!-- Datos del cliente -->
      <div>
        <h3 class="text-lg font-bold mb-2 text-azul-profundo">Datos del Cliente</h3>
        <div class="text-sm space-y-1 p-3 bg-background rounded-md">
          <p><span class="font-medium">Nombre:</span> {cliente.nombre}</p>
          <p><span class="font-medium">Teléfono:</span> {cliente.telefono}</p>
          {cliente.email && <p><span class="font-medium">Email:</span> {cliente.email}</p>}
          {cliente.identificacion && <p><span class="font-medium">Identificación:</span> {cliente.identificacion}</p>}
        </div>
      </div>
      
      <!-- Totales -->
      <div>
        <h3 class="text-lg font-bold mb-2 text-azul-profundo">Totales</h3>
        <div class="space-y-2 p-3 bg-background rounded-md">
          <div class="flex justify-between items-center">
            <span>Total productos:</span>
            <span class="font-bold">{productos.length}</span>
          </div>
          <div class="flex justify-between items-center">
            <span>Valor total de compra:</span>
            <span class="font-bold text-azul-profundo">${totalCompra.toFixed(2)}</span>
          </div>
          <div class="flex justify-between items-center">
            <span>Valor total de venta:</span>
            <span class="font-bold text-verde-oscuro">${totalVenta.toFixed(2)}</span>
          </div>
          {editable && (
            <div class="pt-3 mt-3 border-t border-border">
              <button 
                type="button" 
                id="imprimir-valuacion-btn"
                class="w-full px-4 py-2 bg-verde-lima text-white rounded-md hover:bg-verde-oscuro transition-colors"
              >
                <span class="flex items-center justify-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
                  </svg>
                  Imprimir Valuación
                </span>
              </button>
            </div>
          )}
        </div>
      </div>
    </div>
    
    <!-- Detalle de productos -->
    <div>
      <h3 class="text-lg font-bold mb-3 text-azul-profundo">Detalle de Productos</h3>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-border">
          <thead>
            <tr>
              <th class="px-3 py-2 text-left text-sm font-medium text-text-muted tracking-wider">#</th>
              <th class="px-3 py-2 text-left text-sm font-medium text-text-muted tracking-wider">Categoría</th>
              <th class="px-3 py-2 text-left text-sm font-medium text-text-muted tracking-wider">Marca</th>
              <th class="px-3 py-2 text-left text-sm font-medium text-text-muted tracking-wider">Estado</th>
              <th class="px-3 py-2 text-left text-sm font-medium text-text-muted tracking-wider">Modalidad</th>
              <th class="px-3 py-2 text-right text-sm font-medium text-text-muted tracking-wider">Precio Compra</th>
              <th class="px-3 py-2 text-right text-sm font-medium text-text-muted tracking-wider">Precio Venta</th>
              {editable && (
                <th class="px-3 py-2 text-center text-sm font-medium text-text-muted tracking-wider">Acciones</th>
              )}
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            {productos.map((producto, index) => (
              <tr>
                <td class="px-3 py-2 whitespace-nowrap">{index + 1}</td>
                <td class="px-3 py-2 whitespace-nowrap">{producto.categoria}</td>
                <td class="px-3 py-2 whitespace-nowrap">{producto.marca}</td>
                <td class="px-3 py-2 whitespace-nowrap">{producto.estado}</td>
                <td class="px-3 py-2 whitespace-nowrap">{producto.modalidad}</td>
                <td class="px-3 py-2 text-right whitespace-nowrap">${producto.precioCompra.toFixed(2)}</td>
                <td class="px-3 py-2 text-right whitespace-nowrap">${producto.precioVenta.toFixed(2)}</td>
                {editable && (
                  <td class="px-3 py-2 text-center whitespace-nowrap">
                    <button 
                      type="button" 
                      class="text-azul-claro hover:text-azul-profundo p-1"
                      data-producto-id={producto.id}
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                      </svg>
                    </button>
                  </td>
                )}
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Funcionalidad para imprimir la valuación
    const imprimirBtn = document.getElementById('imprimir-valuacion-btn');
    
    if (imprimirBtn) {
      imprimirBtn.addEventListener('click', () => {
        window.print();
      });
    }
  });
</script>

<style>
  /* Estilos para impresión */
  @media print {
    .resumen-valuacion {
      width: 100%;
      max-width: none;
      margin: 0;
      padding: 0;
    }
    
    /* Ocultar elementos no necesarios para imprimir */
    button, .acciones, [data-no-print] {
      display: none !important;
    }
    
    /* Ajustes adicionales para mejorar la impresión */
    table {
      width: 100%;
      border-collapse: collapse;
    }
    
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
    }
    
    /* Forzar colores de impresión */
    body {
      color: black;
      background: white;
    }
    
    .resumen-valuacion * {
      color: black !important;
      background: white !important;
      border-color: #ddd !important;
    }
  }
</style> 