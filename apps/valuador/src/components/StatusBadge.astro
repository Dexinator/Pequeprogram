---
interface Props {
  status: string;
  customClass?: string;
}

const { status, customClass = '' } = Astro.props;

// Definir clases y textos seg√∫n el estado
function getStatusClass(status: string): string {
  switch(status) {
    case 'aprobada': return 'bg-verde-lima/10 text-verde-lima';
    case 'pendiente': return 'bg-amarillo/10 text-amarillo';
    case 'rechazada': return 'bg-rosa/10 text-rosa';
    case 'borrador': return 'bg-azul-claro/10 text-azul-claro';
    default: return 'bg-gray-100 text-gray-500';
  }
}

function getStatusText(status: string): string {
  switch(status) {
    case 'aprobada': return 'Aprobada';
    case 'pendiente': return 'Pendiente';
    case 'rechazada': return 'Rechazada';
    case 'borrador': return 'Borrador';
    default: return 'Desconocido';
  }
}

const statusClass = getStatusClass(status);
const statusText = getStatusText(status);
---

<span class={`inline-flex px-2 py-1 text-xs rounded-full ${statusClass} ${customClass}`}>
  {statusText}
</span> 