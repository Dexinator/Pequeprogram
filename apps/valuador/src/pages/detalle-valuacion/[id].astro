---
import MainLayout from '../../layouts/MainLayout.astro';
import ValuacionResumen from '../../components/ValuacionResumen.astro';
import StatusBadge from '../../components/StatusBadge.astro';

// Función requerida para rutas dinámicas en modo estático
export function getStaticPaths() {
  // En un caso real, estos IDs vendrían de la base de datos
  return [
    { params: { id: "5432" } },
    { params: { id: "5431" } },
    { params: { id: "5430" } },
    { params: { id: "5429" } },
    { params: { id: "5428" } }
  ];
}

// Obtener el ID de la valuación de los parámetros de ruta
const { id } = Astro.params;

// Datos de ejemplo para una valuación específica
// En una implementación real, estos datos vendrían de la base de datos
const clienteData = {
  nombre: "María Rodríguez",
  telefono: "5512345678",
  email: "maria@ejemplo.com",
  identificacion: "INE: 1234567890"
};

const productosData = [
  {
    id: "producto-1",
    index: 0,
    categoria: "Ropa Infantil",
    subcategoria: "Ropa (0-6 meses)",
    marca: "Carter's",
    estado: "Excelente",
    modalidad: "Consignación",
    precioCompra: 450.75,
    precioVenta: 850.50,
    precioConsignacion: 595.35
  },
  {
    id: "producto-2",
    index: 1,
    categoria: "Juguetes",
    subcategoria: "Juguetes didácticos",
    marca: "Fisher Price",
    estado: "Bueno",
    modalidad: "Compra directa",
    precioCompra: 340.25,
    precioVenta: 599.99
  },
  {
    id: "producto-3",
    index: 2,
    categoria: "Mobiliario",
    subcategoria: "Cunas",
    marca: "Graco",
    estado: "Regular",
    modalidad: "Compra directa",
    precioCompra: 1200.00,
    precioVenta: 2200.00
  }
];

// Calcular totales
const totalCompra = productosData.reduce((sum, p) => sum + p.precioCompra, 0);
const totalVenta = productosData.reduce((sum, p) => sum + p.precioVenta, 0);

// Información de la valuación
const valuacionInfo = {
  id,
  fecha: "15/05/2025",
  estado: "finalizada",
  usuario: "Carlos Mendoza",
  notas: "Cliente recurrente. Todos los artículos en buen estado general."
};
---

<MainLayout title={`Detalle de Valuación VP-${id}`}>
  <div class="space-y-6 pb-10">
    <div class="flex justify-between items-center">
      <div class="flex items-center gap-3">
        <a 
          href="/historial" 
          class="text-azul-claro hover:text-azul-profundo"
          title="Volver al historial"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        </a>
        <h1 class="text-3xl font-heading font-bold text-azul-profundo">Valuación VP-{id}</h1>
        <StatusBadge status={valuacionInfo.estado} />
      </div>
      
      <div class="flex items-center gap-3">
        <button 
          type="button" 
          id="imprimir-btn"
          class="px-5 py-2 border border-border bg-background rounded-md hover:bg-background-alt transition-colors flex items-center gap-2"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2z" />
          </svg>
          Imprimir
        </button>
        
        {valuacionInfo.estado === "pendiente" && (
          <a 
            href={`/editar-valuacion/${id}`}
            class="px-5 py-2 bg-verde-lima text-white rounded-md hover:bg-verde-oscuro transition-colors flex items-center gap-2"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Editar
          </a>
        )}
      </div>
    </div>
    
    <!-- Metadatos de la valuación -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="bg-background-alt p-4 rounded-lg shadow-sm border border-border">
        <div class="flex items-start gap-3">
          <div class="p-2 bg-amarillo/10 rounded-md">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-amarillo" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <p class="text-text-muted text-sm">Fecha</p>
            <p class="font-medium">{valuacionInfo.fecha}</p>
          </div>
        </div>
      </div>
      
      <div class="bg-background-alt p-4 rounded-lg shadow-sm border border-border">
        <div class="flex items-start gap-3">
          <div class="p-2 bg-azul-claro/10 rounded-md">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-azul-claro" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div>
            <p class="text-text-muted text-sm">Valuador</p>
            <p class="font-medium">{valuacionInfo.usuario}</p>
          </div>
        </div>
      </div>
      
      <div class="bg-background-alt p-4 rounded-lg shadow-sm border border-border">
        <div class="flex items-start gap-3">
          <div class="p-2 bg-verde-lima/10 rounded-md">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-verde-lima" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
            </svg>
          </div>
          <div>
            <p class="text-text-muted text-sm">Productos</p>
            <p class="font-medium">{productosData.length}</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Resumen de Valuación -->
    <ValuacionResumen 
      cliente={clienteData} 
      productos={productosData}
      totalCompra={totalCompra}
      totalVenta={totalVenta}
      valuacionId={id || ''}
      fecha={valuacionInfo.fecha}
    />
    
    <!-- Notas -->
    {valuacionInfo.notas && (
      <div class="bg-background-alt p-6 rounded-lg shadow-sm border border-border">
        <h2 class="text-xl font-heading font-bold mb-3 text-azul-profundo">Notas</h2>
        <p class="text-text">{valuacionInfo.notas}</p>
      </div>
    )}
    
    <!-- Historial de cambios (ejemplo) -->
    <div class="bg-background-alt p-6 rounded-lg shadow-sm border border-border">
      <h2 class="text-xl font-heading font-bold mb-3 text-azul-profundo">Historial</h2>
      <div class="space-y-4">
        <div class="flex gap-3 items-start">
          <div class="h-8 w-8 rounded-full bg-azul-claro/20 flex items-center justify-center text-azul-claro">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          </div>
          <div>
            <p class="font-medium">Valuación creada</p>
            <p class="text-sm text-text-muted">15/05/2025 10:32 AM por Carlos Mendoza</p>
          </div>
        </div>
        
        <div class="flex gap-3 items-start">
          <div class="h-8 w-8 rounded-full bg-verde-lima/20 flex items-center justify-center text-verde-lima">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="font-medium">Valuación finalizada</p>
            <p class="text-sm text-text-muted">15/05/2025 11:05 AM por Carlos Mendoza</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Funcionalidad para imprimir la valuación
    const imprimirBtn = document.getElementById('imprimir-btn');
    
    if (imprimirBtn) {
      imprimirBtn.addEventListener('click', () => {
        window.print();
      });
    }
  });
</script>

<style is:global>
  /* Estilos para impresión */
  @media print {
    nav, header, footer, button, a[title="Volver al historial"] {
      display: none !important;
    }
    
    body {
      background: white !important;
      padding: 0 !important;
      margin: 0 !important;
    }
    
    .main-content {
      width: 100% !important;
      max-width: none !important;
      padding: 0 !important;
      margin: 0 !important;
    }
    
    /* Ajustes de color para impresión */
    * {
      color: black !important;
      background: white !important;
      border-color: #ddd !important;
    }
  }
</style> 