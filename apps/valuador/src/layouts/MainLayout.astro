---
interface Props {
  title: string;
}

const { title } = Astro.props;

// Script para manejar preferencia de tema oscuro/claro
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Entrepeques Valuador</title>
    <!-- Importar los estilos globales -->
    <link rel="stylesheet" href="../styles/global.css" />
  </head>
  <body class="bg-background text-text-base flex flex-col min-h-screen">
    <header class="bg-azul-claro text-white py-4">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="flex justify-between items-center md:flex-row flex-col md:gap-0 gap-4">
          <h1 class="text-2xl font-heading font-bold">Entrepeques Valuador</h1>
          <nav>
            <ul class="flex gap-6 list-none">
              <li><a href="/" class="text-white hover:underline font-medium">Inicio</a></li>
              <li><a href="/nueva-valuacion" class="text-white hover:underline font-medium">Nueva Valuaci√≥n</a></li>
              <li><a href="/historial" class="text-white hover:underline font-medium">Historial</a></li>
            </ul>
          </nav>
          <button id="theme-toggle" class="p-2 rounded-full bg-white/10 hover:bg-white/20 transition-colors">
            <span class="dark:hidden">üåô</span>
            <span class="hidden dark:inline">‚òÄÔ∏è</span>
          </button>
        </div>
      </div>
    </header>

    <main class="flex-1 py-8">
      <div class="container mx-auto px-4 max-w-7xl">
        <slot />
      </div>
    </main>

    <footer class="bg-verde-oscuro text-white py-4 mt-auto">
      <div class="container mx-auto px-4 max-w-7xl">
        <p>&copy; {new Date().getFullYear()} Entrepeques. Todos los derechos reservados.</p>
      </div>
    </footer>

    <script>
      // Script para manejar el cambio de tema oscuro/claro
      document.addEventListener('DOMContentLoaded', () => {
        const themeToggle = document.getElementById('theme-toggle');
        
        // Verificar si hay preferencia guardada
        const savedTheme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        
        // Aplicar tema seg√∫n preferencia guardada o del sistema
        if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
          document.documentElement.classList.add('dark');
        }
        
        // Manejar clic en el bot√≥n de cambio de tema
        themeToggle?.addEventListener('click', () => {
          const isDark = document.documentElement.classList.toggle('dark');
          localStorage.setItem('theme', isDark ? 'dark' : 'light');
        });
      });
    </script>
  </body>
</html> 