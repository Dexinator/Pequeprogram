---
import Layout from '../layouts/Layout.astro';
import categoryGroupsComplete from '../data/categoryGroupsComplete.js';

// Usar la estructura de categor√≠as con grupos en lugar de la API directamente
// Esto nos permite mostrar la estructura real del sitio con agrupaciones
const categoriesWithGroups = Object.entries(categoryGroupsComplete).map(([name, data]) => ({
  id: data.id,
  name,
  slug: data.slug,
  icon: data.icon,
  groupCount: data.groups.length,
  hasGroupedItems: data.groups.some(g => g.type === 'grouped')
}));

// Mapeo de categor√≠as a los nuevos √≠conos SVG extra√≠dos  
const categoryIconMapping: Record<string, string> = {
  'A pasear': 'strollers',      // Carriolas
  'A dormir': 'cribs',           // Cunas
  'En Casa': 'safety',           // Seguridad/Casa
  'A comer': 'high-chairs',      // Sillas para comer
  'Ropa': 'women-clothing',      // Ropa
  'A jugar': 'toys',             // Juguetes
  
  // Mapeos adicionales por si hay m√°s categor√≠as
  'Juguetes': 'toys',
  'Carriolas': 'strollers',
  'Cunas': 'cribs',
  'Autoasientos': 'car-seat',
  'Sillas para Comer': 'high-chairs',
  'Mecedoras': 'rocking-chair',
  'Procesador de Alimentos': 'food-processor',
  'Lactancia': 'breastfeeding',
  'Ba√±o': 'bathroom',
  'Seguridad': 'safety',
  'Libros': 'books',
  'Accesorios Cunas': 'crib-accessories',
  'Correpasillos': 'ride-on',
  'Sobre Ruedas': 'wheels',
  'Otros Paseo': 'other-travel',
  'Disfraces': 'costume',
  'Juegos Grandes': 'large-toys',
  'Ropa Ni√±a': 'girl',
  'Ropa Ni√±o': 'boy',
  'Ropa Dama': 'women-clothing',
  'Calzado Ni√±o': 'boys-footwear',
  'Calzado Ni√±a': 'girls-footwear',
  'Accesorios Dama': 'women-accessories',
  'Andaderas': 'walker',
};

// Emojis divertidos para cada categor√≠a
const categoryEmojis = {
  'A pasear': 'üöº',
  'A dormir': 'üò¥',
  'En Casa': 'üè†',
  'A comer': 'üçº',
  'Ropa': 'üëï',
  'A jugar': 'üéÆ'
};

// Colores espec√≠ficos para cada categor√≠a usando la paleta Entrepeques
const categoryColors = {
  'A pasear': 'bg-brand-rosa hover:bg-brand-rosa/80 text-white',
  'A dormir': 'bg-brand-azul hover:bg-brand-azul-profundo text-white',
  'En Casa': 'bg-brand-verde-lima hover:bg-brand-verde-oscuro text-white',
  'A comer': 'bg-brand-amarillo hover:bg-yellow-500 text-gray-900',
  'Ropa': 'bg-brand-rosa hover:bg-brand-rosa/80 text-white',
  'A jugar': 'bg-brand-azul hover:bg-brand-azul-profundo text-white'
};

// Funci√≥n para obtener slug de categor√≠a
function getCategorySlug(name: string): string {
  return name.toLowerCase()
    .normalize('NFD')
    .replace(/[\u0300-\u036f]/g, '')
    .replace(/\s+/g, '-')
    .replace(/[^a-z0-9-]/g, '');
}
---

<Layout title="Categor√≠as">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-950 transition-colors py-8">
    <div class="container mx-auto px-4">
      <!-- T√≠tulo simple -->
      <div class="mb-8">
        <h1 class="font-heading text-3xl md:text-4xl font-bold text-gray-800 dark:text-gray-100">
          Categor√≠as
        </h1>
        <p class="font-body text-lg text-gray-600 dark:text-gray-400 mt-2">
          Explora nuestros productos por categor√≠a
        </p>
      </div>

      <!-- Categor√≠as Grid -->
      {categoriesWithGroups.length === 0 ? (
        <div class="text-center py-12 bg-gray-100 dark:bg-gray-800 rounded-2xl">
          <p class="text-gray-500 dark:text-gray-400 text-lg">No hay categor√≠as disponibles en este momento</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {categoriesWithGroups.map((category) => {
            const iconName = category.icon;
            const emoji = categoryEmojis[category.name] || 'üõçÔ∏è';
            const colorClass = categoryColors[category.name] || 'bg-brand-azul hover:bg-brand-azul-profundo text-white';
            
            return (
              <a 
                href={`/categoria/${category.slug}`} 
                class="group relative bg-white dark:bg-gray-800 rounded-2xl shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300 overflow-hidden"
              >
                <div class="p-6">
                  {/* Header con color de fondo */}
                  <div class={`-m-6 mb-6 p-6 ${colorClass} transition-colors`}>
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-4">
                        <div class="bg-white/20 rounded-xl p-3">
                          <img 
                            src={`/icons/ep-${iconName}.svg`}
                            alt={category.name}
                            class="w-12 h-12 filter brightness-0 invert"
                            loading="lazy"
                          />
                        </div>
                        <div>
                          <h3 class="font-heading text-xl font-bold">
                            {category.name}
                          </h3>
                          <p class="text-sm opacity-90 mt-1">
                            {category.groupCount} {category.groupCount === 1 ? 'subcategor√≠a' : 'subcategor√≠as'}
                            {category.hasGroupedItems && ' (agrupadas)'}
                          </p>
                        </div>
                      </div>
                      <span class="text-3xl">{emoji}</span>
                    </div>
                  </div>
                  
                  {/* Footer con informaci√≥n adicional */}
                  <div class="flex items-center justify-between text-gray-600 dark:text-gray-400">
                    <span class="text-sm font-medium">Ver productos</span>
                    <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      )}
    </div>
  </div>
</Layout>