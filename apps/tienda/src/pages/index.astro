---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/shop/HeroSection.jsx';
import Categories from '../components/shop/Categories.jsx';
import CategoriesSimple from '../components/shop/CategoriesSimple.jsx';
import CategoriesStandalone from '../components/shop/CategoriesStandalone.jsx';
import WhyChooseUs from '../components/shop/WhyChooseUs.jsx';
import FeaturedProductsWrapper from '../components/FeaturedProductsWrapper';
import Testimonials from '../components/shop/Testimonials.jsx';
import CTASection from '../components/shop/CTASection.jsx';
---

<Layout title="Inicio - Entrepeques | Artículos infantiles de segunda mano">
  <!-- Hero Section -->
  <HeroSection client:only="react" />

  <!-- Categorías destacadas -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-heading text-4xl md:text-5xl font-bold text-brand-azul dark:text-brand-azul-light mb-4">
          Explora nuestras categorías
        </h2>
        <p class="font-body text-lg text-gray-600 dark:text-gray-400">
          Todo lo que necesitas para tus pequeños, organizado para ti
        </p>
      </div>
      
      <!-- Categorías sin PageWrapper -->
      <CategoriesStandalone client:only="react" />
    </div>
  </section>

  <!-- Why Choose Us -->
  <WhyChooseUs client:only="react" />

  <!-- Productos destacados -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-heading text-4xl md:text-5xl font-bold text-brand-azul dark:text-brand-azul-light mb-4">
          Productos destacados
        </h2>
        <p class="font-body text-lg text-gray-600 dark:text-gray-400">
          Los favoritos de nuestros clientes
        </p>
      </div>
      <FeaturedProductsWrapper client:only="react" />
    </div>
  </section>

  <!-- Testimonials -->
  <Testimonials client:only="react" />

  <!-- CTA Section -->
  <CTASection client:only="react" />

</Layout>