import forbesImg from '../../assets/press/forbes.jpg';
import entrepreneurImg from '../../assets/press/entrepreneur.png';
import abcRadioImg from '../../assets/press/abcradio.png';
import onImg from '../../assets/press/on.jpg';

const pressItems = [
  {
    image: forbesImg,
    alt: 'Forbes M√©xico',
    title: 'Forbes M√©xico',
    description: 'Emprendimiento sostenible que transforma el consumo infantil',
    link: 'https://www.forbes.com.mx/entre-peques-reutiliza-ahorra-y-gana/'
  },
  {
    image: entrepreneurImg,
    alt: 'Entrepreneur',
    title: 'Entrepreneur',
