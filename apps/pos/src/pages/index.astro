---
import Layout from '../layouts/Layout.astro';
import AuthProvider from '../components/AuthProvider.jsx';
import "../styles/global.css";
---

<Layout title="Entrepeques POS - Sistema de Punto de Venta">
  <AuthProvider client:load>
    <div class="min-h-screen bg-gray-50">
      {/* Header */}
      <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            <div class="flex items-center">
              <h1 class="text-xl font-semibold text-gray-900">Entrepeques POS</h1>
            </div>
            <div class="flex items-center space-x-4">
              <span class="text-sm text-gray-600">Usuario: <span id="username" class="font-medium"></span></span>
              <button 
                id="logout-btn"
                class="text-sm text-red-600 hover:text-red-700 font-medium"
              >
                Cerrar Sesión
              </button>
            </div>
          </div>
        </div>
      </header>

      {/* Main Content */}
      <main class="flex-1 p-6">
        <div class="max-w-7xl mx-auto">
          {/* Quick Actions */}
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <button class="bg-blue-600 hover:bg-blue-700 text-white p-6 rounded-lg shadow-md transition-colors">
              <svg class="w-8 h-8 mb-2 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <h3 class="text-lg font-semibold">Nueva Venta</h3>
              <p class="text-sm opacity-90 mt-1">Registrar una venta</p>
            </button>

            <button class="bg-green-600 hover:bg-green-700 text-white p-6 rounded-lg shadow-md transition-colors">
              <svg class="w-8 h-8 mb-2 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
              </svg>
              <h3 class="text-lg font-semibold">Inventario</h3>
              <p class="text-sm opacity-90 mt-1">Consultar productos</p>
            </button>

            <button class="bg-purple-600 hover:bg-purple-700 text-white p-6 rounded-lg shadow-md transition-colors">
              <svg class="w-8 h-8 mb-2 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <h3 class="text-lg font-semibold">Reportes</h3>
              <p class="text-sm opacity-90 mt-1">Ver ventas del día</p>
            </button>
          </div>

          {/* Recent Sales */}
          <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Ventas Recientes</h2>
            <div class="overflow-x-auto">
              <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                  <tr>
                    <th class="px-6 py-3">ID</th>
                    <th class="px-6 py-3">Cliente</th>
                    <th class="px-6 py-3">Total</th>
                    <th class="px-6 py-3">Método</th>
                    <th class="px-6 py-3">Hora</th>
                  </tr>
                </thead>
                <tbody id="recent-sales" class="divide-y divide-gray-200">
                  <tr>
                    <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                      Cargando ventas recientes...
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
  </AuthProvider>
</Layout>

<script>
  // Actualizar nombre de usuario cuando esté disponible
  const updateUsername = () => {
    const userStr = localStorage.getItem('entrepeques_user');
    if (userStr) {
      try {
        const user = JSON.parse(userStr);
        const usernameEl = document.getElementById('username');
        if (usernameEl) {
          usernameEl.textContent = user.username || 'Usuario';
        }
      } catch (e) {
        console.error('Error parsing user data:', e);
      }
    }
  };

  // Manejar logout
  const logoutBtn = document.getElementById('logout-btn');
  if (logoutBtn) {
    logoutBtn.addEventListener('click', () => {
      localStorage.removeItem('entrepeques_auth_token');
      localStorage.removeItem('entrepeques_user');
      window.location.reload();
    });
  }

  // Actualizar username cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', updateUsername);
  } else {
    updateUsername();
  }

  // También intentar actualizar después de un breve delay para asegurar que AuthProvider haya terminado
  setTimeout(updateUsername, 1000);
</script>